html
  head
    title Register
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/static_files/css/style.css")
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          h1.page-title.text-center.mb-0 Project 4
          h4.page-subtitle.text-center.mb-4 Video Sharing Platform
          .card.shadow
            .card-body
              h3.card-title.mb-4.text-center Register
              if error
                .alert.alert-danger #{error}
              form(method="POST", action="/auth/register")
                .mb-3
                  label.form-label(for="email") Email
                  input.form-control(type="text", name="email", placeholder="Email")
                .mb-3
                  label.form-label(for="name") Name
                  input.form-control(type="text", name="name", placeholder="Name")
                .mb-3
                  label.form-label(for="password") Password
                  input.form-control(type="password", name="password", placeholder="Password")
                button.btn.btn-primary.w-100(type="submit") Register
              p.text-center.mt-3
                | Already have an account?
                a(href="/auth/login") Login here
