html
  head
    title Video Dashboard
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/static_files/css/style.css")
  body
    .container.mt-4
      h2.text-center.mb-4 Hello #{user.name}
      .d-flex.justify-content-between.align-items-center.mb-3
        .btn-group
          a(class=(activeFilter === 'all' ? 'btn btn-primary' : 'btn btn-outline-primary') href="/video/dashboard/all") All Videos
          a(class=(activeFilter === 'mine' ? 'btn btn-primary' : 'btn btn-outline-primary') href="/video/dashboard/mine") My Videos
        a.btn.btn-success(href="/video/new_video") Upload Video

      if videos.length === 0
        p.text-center No videos to display yet

      .row.row-cols-1.row-cols-sm-2.row-cols-md-3.row-cols-lg-4.g-4
        each video in videos
          .col
            .card.shadow-sm.border-0.rounded-3.h-100(style="transition: box-shadow 0.2s ease-in-out;")
              .ratio.ratio-16x9
                iframe(
                  class="card-img-top rounded-top"
                  src=`https://www.youtube.com/embed/${video.videoId}`
                  frameborder="0"
                  allowfullscreen=true
                )
              .card-body.d-flex.flex-column
                h5.card-title.mb-1 #{video.title}
                p.card-text.text-muted.mb-0 by #{video.author}
