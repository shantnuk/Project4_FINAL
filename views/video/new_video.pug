html
  head
    title Share New Video
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/static_files/css/style.css")
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow
            .card-body
              h3.card-title.mb-4.text-center Upload Video
              if error
                .alert.alert-info #{error}
              form(method="POST", action="/video/new")
                .mb-3
                  label.form-label(for="title") Title
                  input.form-control(type="text", name="title", placeholder="Video Title")
                .mb-3
                  label.form-label(for="author") Author
                  input.form-control(type="text", name="author", placeholder="Author Name")
                .mb-3
                  label.form-label(for="videoId") YouTube Vid ID
                  input.form-control(type="text", name="videoId", placeholder="yrdTRSdtriugIUG")
                  
                button.btn.btn-success.w-100(type="submit") Upload Video
              hr
              .text-center
                a.btn.btn-secondary(href="/video/dashboard/mine") Back to Dashboard
